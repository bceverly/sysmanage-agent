# SysManage Agent Configuration
# Copy this file to /etc/sysmanage-agent.yaml and customize for your environment

# Server connection settings
server:
  # WebSocket URL of the SysManage server
  url: "wss://sysmanage.example.com:8443"

  # Authentication token (optional - obtain from SysManage server if required)
  # token: "YOUR_AGENT_TOKEN_HERE"

  # Reconnect settings
  reconnect_interval: 30  # seconds
  max_reconnect_attempts: 0  # 0 = unlimited

# Database settings
database:
  # Path to SQLite database file
  # Default: /var/lib/sysmanage-agent/agent.db
  # Fallback: ./agent.db (in working directory)
  path: "/var/lib/sysmanage-agent/agent.db"

# Logging settings
logging:
  # Log level: Specify which levels to log, separated by pipes
  # Example: "INFO|WARNING|ERROR|CRITICAL" or "DEBUG|INFO|WARNING|ERROR"
  level: "INFO|WARNING|ERROR|CRITICAL"

  # Log file path
  file: "/var/log/sysmanage-agent/agent.log"

  # Maximum log file size (in bytes)
  max_size: 10485760  # 10MB

  # Number of backup log files to keep
  backup_count: 5

# Collection intervals (in seconds)
collection:
  # How often to collect system information
  system_info_interval: 300  # 5 minutes

  # How often to collect package information
  package_info_interval: 3600  # 1 hour

  # How often to check for updates
  update_check_interval: 3600  # 1 hour

  # How often to collect hardware information
  hardware_info_interval: 3600  # 1 hour

# Security settings
security:
  # Verify SSL certificates
  verify_ssl: true

  # Path to custom CA certificate (optional)
  # ca_cert: "/etc/sysmanage-agent/ca-cert.pem"

# Feature flags
features:
  # Enable automatic package updates
  auto_update: false

  # Enable firewall management
  firewall_management: true

  # Enable certificate management
  certificate_management: true

  # Enable script execution
  script_execution: true
